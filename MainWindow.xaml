<Window x:Class="AuroraPAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aurora PAR" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Canvas Name="Vertical" Grid.Row="0" Background="Black"/>
            <Canvas Name="Horizontal" Grid.Row="1" Background="Black"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" Name="RunwayComboBox"></ComboBox>
            <ComboBox Grid.Row="1" Name="DistanceComboBox"></ComboBox>
        </Grid>
    </Grid>
</Window>